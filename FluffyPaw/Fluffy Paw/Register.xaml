<Page xmlns:my="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    x:Class="Fluffy_Paw.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local1="using:Fluffy_Paw.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFDDF9EB">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--left screen-->
        <RelativePanel Grid.Column="0" 
                       Background= "#FFF6B6DC"
                       CornerRadius="30"
                       Margin="10">
            <Image Source="Assets/login.gif" 
                   Height="400"
                   Opacity="0.8"     
                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                   RelativePanel.AlignVerticalCenterWithPanel="True"
                   >
            </Image>

        </RelativePanel>


        <RelativePanel  Grid.Column="1"
            CornerRadius="30"
            Margin="0,10,10,10"
            Background="#FFD7D7D7">
            
            <ScrollViewer RelativePanel.AlignHorizontalCenterWithPanel="True"
                          RelativePanel.AlignVerticalCenterWithPanel="True"
                          Background="#FF2B2222" 
                          Opacity="0.5"
                          CornerRadius="20"
                          Width="600"
                          Height="600">

                <StackPanel >

                    <TextBlock 
                            Text="Register"
                            FontSize="60"                                   
                            HorizontalAlignment="Center"                                    
                            FontWeight="ExtraLight"                                   
                            VerticalAlignment="Center"        
                            FontFamily="Quicksand"/>
       
                    <!--Name-->
                    <TextBox
                        x:Name="RName"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Name"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                    <!--Email-->
                    <TextBox
                        x:Name="REmail"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Email"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                    <!--Passward-->
                    <PasswordBox 
                        x:Name="RPassword"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Passward"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                    <!--Confirm Passward-->
                    <PasswordBox 
                        x:Name="CPpassword"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Confirm Passward"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>
                    
                    <!--Back to the Login page-->
                    <Grid
                         HorizontalAlignment="Center"
                         Tapped="Back_Tapped">
                        <Image Source="Assets/BackKey.png"
                                    Width="50"
                                    Height="50"/>
                    </Grid>
                    
                    <!--Sign up button-->
                    <Button 
                        x:Name="SignUpbtn"
                        Click="SignUpbtnClick"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="#FF479647"
                        Margin="5"
                        Padding="10"
                        CornerRadius="10"
                        FontFamily="Quicksand"
                        FontSize="20"
                        BorderThickness="0">
                            Register
                    </Button>
                    

                    <!--Database check-->
                    <!--<Grid>
                        <my:DataGrid 
                            x:Name="Userlist"/>
                    </Grid>-->
             
                </StackPanel>
            </ScrollViewer>
        </RelativePanel>
    </Grid>
</Page>
