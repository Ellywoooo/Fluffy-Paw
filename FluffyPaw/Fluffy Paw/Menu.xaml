<Page
    x:Class="Fluffy_Paw.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluffy_Paw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFDDF9EB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Menu bar -->
        <RelativePanel  Grid.Column="0"
                        Background="#FFBCF7DA">
            <Grid Margin="10,20,0,0"
                  Width="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <RelativePanel Grid.Row="0" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Background="#FF79F0B6"
                               Padding="15"
                               CornerRadius="10"
                               Tapped="Home_Tapped">
                    <Grid x:Name="Home"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Home.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Home"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Home"
                       RelativePanel.AlignHorizontalCenterWith="Home"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel Grid.Row="1" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Tapped="Adoption_Tapped">
                    <Grid x:Name="Adoption"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Adoption.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Adoption"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Adoption"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel Grid.Row="2" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Tapped="MnS_Tapped">
                    <Grid x:Name="Missing"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Missing.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Rescue"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Missing"
                       RelativePanel.AlignHorizontalCenterWith="Missing"
                       Foreground="Black"
                       />
                </RelativePanel>

                <RelativePanel Grid.Row="3" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Tapped="Donation_Tapped">
                    <Grid x:Name="Donation"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Donation.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Donation"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Donation"
                       RelativePanel.AlignHorizontalCenterWith="Donation"
                       Foreground="Black"/>
                </RelativePanel>

            </Grid>
        </RelativePanel>

        <Grid Grid.Column="1"
                       Margin="10,10,10,10"
                       CornerRadius="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Background="#FF6B9C90"
                    Opacity="0.5"
                    CornerRadius="30"
                  />
            
            <!--Top-->
            <Grid
                Grid.Column="0"
                Grid.ColumnSpan="2"
                CornerRadius="50"
                Margin="10,10,10,10">
                
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/MenuLogo.png" Opacity="0.8"/>
                </Grid.Background>
                <StackPanel>
                    <TextBlock
                        FontSize="50"
                        Margin="20"
                        FontFamily="Quicksand"
                        Foreground="DeepPink"
                        FontWeight="SemiBold"
                        TextWrapping="Wrap"
                        >
                        Fluffy Paw!
                    </TextBlock>
                    <TextBlock
                        FontSize="25"
                        Margin="20"
                        FontFamily="Quicksand"
                        Foreground="DeepPink"
                        FontWeight="Medium"
                        TextWrapping="Wrap"
                        >Welcome to the Fluffy Paw!
                    </TextBlock>
                </StackPanel>

            </Grid>
            
            <!--Bottom-->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                CornerRadius="30"
                Margin="0,10,0,10"
                >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <RelativePanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="20">
                        <Image 
                            Source="Assets/Main.gif" 
                            Width="210"
                            Height="210"
                            />
                    </RelativePanel>
                </Grid>
                <Grid Grid.Column="1">
                    <RelativePanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="20">
                        <Image 
                            Source="Assets/MenuAdoption.jpg" 
                            Width="210"
                            Height="210"
                            Stretch="Fill"
                            Opacity="0.6"
                            x:Name="img1"/>
                        <TextBlock
                            RelativePanel.AlignBottomWith="img1"
                            RelativePanel.AlignHorizontalCenterWith="img1"
                            FontSize="20"
                            FontWeight="SemiBold"
                            TextWrapping="Wrap"
                            FontFamily="Quicksand"
                            Margin="10"
                            >
                            Adoption
                        </TextBlock>
                    </RelativePanel>
                </Grid>
                <Grid Grid.Column="2">
                    <RelativePanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="20">
                        <Image 
                            Source="Assets/MenuRescue.jpg" 
                            Width="210"
                            Height="210"
                            x:Name="img2"
                            Stretch="Fill"
                            Opacity="0.6"/>
                        <TextBlock
                            RelativePanel.AlignBottomWith="img2"
                            RelativePanel.AlignHorizontalCenterWith="img2"
                            FontSize="20"
                            FontWeight="SemiBold"
                            TextWrapping="Wrap"
                            FontFamily="Quicksand"
                            Margin="10"
                            >
                            Animal rescue
                        </TextBlock>
                    </RelativePanel>
                </Grid>
                <Grid Grid.Column="3">
                    <RelativePanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="20">
                        <Image 
                            Source="Assets/MenuMissing.jpg" 
                            Width="210"
                            Height="210"
                            x:Name="img3"
                            Stretch="Fill"
                            Opacity="0.6"
                            />
                        <TextBlock
                            RelativePanel.AlignBottomWith="img3"
                            RelativePanel.AlignHorizontalCenterWith="img3"
                            FontSize="20"
                            FontWeight="SemiBold"
                            TextWrapping="Wrap"
                            FontFamily="Quicksand"
                            Margin="10"
                            >
                            Missing Sighting
                        </TextBlock>
                    </RelativePanel>
                </Grid>
                <Grid Grid.Column="4">
                    <RelativePanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="20">
                        <Image 
                            Source="Assets/MenuDonation.jpg" 
                            Width="210"
                            Height="210"
                            x:Name="img4"
                            Stretch="Fill"
                            Opacity="0.6"
                            />
                        <TextBlock
                            RelativePanel.AlignBottomWith="img4"
                            RelativePanel.AlignHorizontalCenterWith="img4"
                            FontSize="20"
                            FontWeight="SemiBold"
                            TextWrapping="Wrap"
                            FontFamily="Quicksand"
                            Margin="10"
                            >
                            Donation
                        </TextBlock>
                    </RelativePanel>
                </Grid>
               
            </Grid>

        </Grid>
    </Grid>
</Page>
