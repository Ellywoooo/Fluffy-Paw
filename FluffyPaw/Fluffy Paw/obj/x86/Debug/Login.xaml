<Page
    x:Class="Fluffy_Paw.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluffy_Paw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFDDF9EB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--left screen-->
        <RelativePanel Grid.Column="0" 
                       Background= "#FFF6B6DC"
                       CornerRadius="30"
                       Margin="10">
            <Image Source="Assets/login.gif" 
                   Height="400"
                   Opacity="0.8"     
                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                   RelativePanel.AlignVerticalCenterWithPanel="True"
                   >
            </Image>

        </RelativePanel>

        <!--Login-->
        <RelativePanel 
            Grid.Column="1"
            CornerRadius="30"
            Margin="0,10,10,10"
            Background="#FFD7D7D7">

            <ScrollViewer RelativePanel.AlignHorizontalCenterWithPanel="True"
                          RelativePanel.AlignVerticalCenterWithPanel="True"
                          Background="#FF2B2222" 
                          Opacity="0.5"
                          CornerRadius="20">
                
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Login"
                                   FontSize="70"
                                   FontWeight="Light"
                                   Foreground="White"
                                   FontFamily="Quicksand"
                                   HorizontalAlignment="Center"
                                   />
                    </Grid>
                    <!--ID box-->
                    <TextBox x:ConnectionId='2' 
                            x:Name="Userid"
                            Width="300" Height="50"
                             BorderThickness="0"
                             PlaceholderText="User ID"
                             CornerRadius="10" 
                             Margin="10" 
                             FontSize="25"
                             FontFamily="Quicksand"
                            />
                    <!--Password box-->
                    <PasswordBox x:ConnectionId='3' 
                            x:Name="Userpw" 
                            Width="300" Height="50"
                             BorderThickness="0"
                             PlaceholderText="PassWord"
                             CornerRadius="10" 
                             Margin="10" 
                             FontSize="25"
                             FontFamily="Quicksand"
                            />
                    <!--Error message-->
                    <TextBlock x:ConnectionId='4'
                            x:Name="Errormsg"
                            Width="300" 
                            Height="20"
                            FontSize="11"
                            Margin="20,0,0,0"
                            TextWrapping="Wrap"
                            FontFamily="Quicksand"
                            FontWeight="ExtraBold"
                            Foreground="Red"/>
                    <!--Login button-->
                    <Button x:ConnectionId='5' 
                                                   
                            Content="Log in" 
                            FontWeight="Medium"
                            FontSize="20"
                            HorizontalAlignment="Stretch"
                            Height="40" 
                            CornerRadius="10" 
                            Margin="10,10,10,10"
                            FontFamily="Quicksand">
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.ThemeDictionaries>
                                    <ResourceDictionary x:Key="Light">
                                        <SolidColorBrush x:Key="ButtonForegroubdPoiterOver" Color="Wheat"/>
                                        <SolidColorBrush x:Key="ButtonBackgroubdPoiterOver" Color="Wheat"/>
                                    </ResourceDictionary>
                                </ResourceDictionary.ThemeDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                    <!--Register button-->
                    <Button x:ConnectionId='6' 
                                                       
                            Content="Register"  
                            HorizontalAlignment="Stretch" 
                            Height="40" 
                            FontWeight="Medium"
                            FontSize="20"
                            CornerRadius="10" 
                            Margin="10,10,10,10"
                            FontFamily="Quicksand">
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.ThemeDictionaries>
                                    <ResourceDictionary x:Key="Light">
                                        <SolidColorBrush x:Key="ButtonForegroubdPoiterOver" Color="Wheat"/>
                                        <SolidColorBrush x:Key="ButtonBackgroubdPoiterOver" Color="Wheat"/>
                                    </ResourceDictionary>
                                </ResourceDictionary.ThemeDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            
            </ScrollViewer>
        </RelativePanel>
    
    </Grid>
</Page>

