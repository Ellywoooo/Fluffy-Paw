<Page
    x:Class="Fluffy_Paw.MissingandSighting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:Fluffy_Paw.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Default source of binding -->
    <Page.DataContext>
        <local1:MnSList/>
    </Page.DataContext>
    
    <Grid Background="#FFDDF9EB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Menu bar -->
        <RelativePanel  Grid.Column="0"
                        Background="#FFBCF7DA">
            <Grid Margin="10,20,0,0"
                  Width="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <RelativePanel x:ConnectionId='5' Grid.Row="0" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                   >
                    <Grid x:ConnectionId='12' x:Name="Home"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Home.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Home"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Home"
                       RelativePanel.AlignHorizontalCenterWith="Home"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='6' Grid.Row="1" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                       >
                    <Grid x:ConnectionId='11' x:Name="Adoption"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Adoption.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Adoption"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Adoption"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='7' Grid.Row="2" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Background="#FF79F0B6"
                                                  >
                    <Grid x:ConnectionId='10' x:Name="Missing"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Missing.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Rescue"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Missing"
                       RelativePanel.AlignHorizontalCenterWith="Missing"
                       Foreground="Black"
                       />
                </RelativePanel>

                <RelativePanel x:ConnectionId='8' Grid.Row="3" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                       >
                    <Grid x:ConnectionId='9' x:Name="Donation"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Donation.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Donation"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Donation"
                       RelativePanel.AlignHorizontalCenterWith="Donation"
                       Foreground="Black"/>
                </RelativePanel>

            </Grid>
        </RelativePanel>
       
        <Grid Grid.Column="1"
                       Margin="10,10,10,10"
                       CornerRadius="50"
                        Background="#FFBAD4CE">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Name of the page-->
            <Grid>
                <TextBlock Text="Missing / Sighting"
                        FontSize="40"
                        Margin="30,30,0,0"
                        FontFamily="Seoul UI"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        TextWrapping="Wrap"
                        HorizontalTextAlignment="Left"
                        VerticalAlignment="Center"/>
            </Grid>

            <!--Combobox-->
            <Grid Grid.Row="1"
                  Grid.Column="0">
                <ComboBox x:ConnectionId='4' x:Name="MnSCombo"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Bottom"
                          Height="50"
                          Width="200"
                          Margin="30,10,10,10"
                          CornerRadius="10"
                          PlaceholderText="Sort by"
                          FontFamily="Quicksand"
                                                              >
                    <ComboBoxItem Content="Missing"/>
                    <ComboBoxItem Content="Sighting"/>
                </ComboBox>

            </Grid>
            
            <!--Itme gridviewer-->
            <GridView x:ConnectionId='2' 
                      x:Name="MnSGridView"
                      ItemsSource="{Binding animal, Mode=OneWay}"
                      IsItemClickEnabled="True"
                                                    
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Background="#FF6B9C90"
                      Margin="10,10,10,10"
                      CornerRadius="20"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel CornerRadius="10"
                                    Margin="20,20,20,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="#FF37787C">
                            <StackPanel>
                                <Grid 
                                    CornerRadius="20"
                                    Margin="5">
                                    <Image 
                                       Height="250"
                                       Width="230" 
                                       Source = "{Binding Image}"
                                       Stretch="Fill"/>
                                </Grid>
                                <Grid
                                    Background="OrangeRed"
                                    CornerRadius="5"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="10"
                                    Padding="5">
                                    <TextBlock FontSize="16" 
                                               Text = "{Binding MorS}"
                                               HorizontalTextAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontFamily="Quicksand"
                                               />
                                </Grid>
                            
                            </StackPanel>
                       
                            <TextBlock FontSize="17" 
                                       Text= "{Binding Animal}"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="Quicksand"
                                       FontWeight="SemiBold"/>
                            
                            <TextBlock FontSize="15" 
                                       Text= "{Binding Gender}"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="Quicksand"
                                       FontWeight="SemiBold"/>
                            
                            <TextBlock FontSize="13" 
                                       Text= "{Binding Species}"
                                       HorizontalTextAlignment="Center"
                                       FontFamily="Quicksand"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </Grid>

    </Grid>
</Page>

