<Page
    x:Class="Fluffy_Paw.AdoptionInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluffy_Paw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFDDF9EB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Menu bar -->
        <RelativePanel  Grid.Column="0"
                        Background="#FFBCF7DA">
            <Grid Margin="10,20,0,0"
                  Width="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <RelativePanel x:ConnectionId='6' Grid.Row="0" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                   >
                    <Grid x:ConnectionId='13' x:Name="Home"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Home.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Home"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Home"
                       RelativePanel.AlignHorizontalCenterWith="Home"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='7' Grid.Row="1" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Background="#FF79F0B6"
                                                       >
                    <Grid x:ConnectionId='12' x:Name="PetAdoption"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Adoption.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Adoption"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="PetAdoption"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='8' Grid.Row="2" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                  >
                    <Grid x:ConnectionId='11' x:Name="Missing"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Missing.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Rescue"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Missing"
                       RelativePanel.AlignHorizontalCenterWith="Missing"
                       Foreground="Black"
                       />
                </RelativePanel>

                <RelativePanel x:ConnectionId='9' Grid.Row="3" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                       >
                    <Grid x:ConnectionId='10' x:Name="Donate"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Donation.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Donation"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Donate"
                       RelativePanel.AlignHorizontalCenterWith="Donate"
                       Foreground="Black"/>
                </RelativePanel>

            </Grid>
        </RelativePanel>

        <Grid Grid.Column="1"
                       Margin="10,10,10,10"
                       CornerRadius="50"
                        Background="#FFBAD4CE">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Name of the page-->
            <Grid>
                <TextBlock 
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Details"
                        FontSize="50"
                        Margin="30,30,0,0"
                        FontFamily="Seoul UI"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        TextWrapping="Wrap"
                        HorizontalTextAlignment="Left"
                        VerticalAlignment="Center"/>
            </Grid>
            
            <!--Back key-->
            <Grid x:ConnectionId='2'
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                                       
                Margin="10,10,20,10">
                <Image Source="Assets/BackKey.png"
                       Width="50"
                       Height="50"/>
            </Grid>

            <!--Detail board-->
            <GridView x:ConnectionId='3' 
                      x:Name="DetailGridView"
                      ItemsSource="{Binding Items, Mode=OneWay}"
                      Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Background="#FF6B9C90"
                      Margin="10,10,10,10"
                      CornerRadius="20"
                      Padding="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      >

                <GridView.ItemTemplate> 
                    <DataTemplate>
                        <Grid>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!--Image-->
                            <Grid 
                                Grid.Column="0"
                                Margin="10,10,10,10"
                                CornerRadius="10"
                                BorderBrush="PapayaWhip"
                                BorderThickness="3"
                                HorizontalAlignment="Left"
                               >
                                <Image Source="{Binding Image}"
                                       Width="500"
                                       Height="500"
                                       Stretch="Fill"/>
                            </Grid>
                            <!--Details-->
                            <StackPanel 
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Padding="10">
                                <TextBlock 
                                        FontSize="60"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontFamily="Quicksand"
                                        Padding="5">           
                                        <Run Text="{Binding Animal}"
                                             FontWeight="ExtraBold"/>
                                </TextBlock>

                                <TextBlock 
                                        FontSize="50"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontWeight="Medium"
                                        FontFamily="Quicksand"
                                        Padding="5">
                                    
                                        <Run Text="Name ("/>
                                        <Run Text="{Binding Name}"
                                             FontWeight="ExtraBold"/>
                                        <Run Text=")"/>
                                </TextBlock>

                                <Grid
                                        HorizontalAlignment="Center"
                                        Margin="5"
                                        Padding="5"
                                        CornerRadius="10"
                                        Background="LimeGreen">
                                    <TextBlock 
                                                FontSize="30"
                                                Foreground="Black"
                                                HorizontalAlignment="Center"
                                                FontFamily="Quicksand"
                                                FontWeight="Medium"
                                                Padding="5">
                                        
                                                <Run Text="{Binding Species}"
                                                     Foreground="Black"
                                                     FontWeight="SemiBold"/>
                                    </TextBlock>
                                </Grid>

                                <Grid
                                        HorizontalAlignment="Center"
                                        Margin="5"
                                        Padding="5"
                                        CornerRadius="10"
                                        Background="LightGreen">
                                    <TextBlock 
                                        FontSize="30"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontFamily="Quicksand"
                                        FontWeight="Medium"
                                        Padding="5">
                                        
                                        <Run Text="{Binding Gender}"
                                             FontWeight="SemiBold"/>
                                    </TextBlock>
                                </Grid>

                                <TextBlock 
                                        FontSize="30"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontFamily="Quicksand"
                                        FontWeight="Medium"
                                        Padding="5">
                                        
                                        <Run Text="Age "/>
                                        <Run Text="{Binding Age}"
                                             Foreground="Black"
                                             FontWeight="SemiBold"/>
                                </TextBlock>

                                <TextBlock 
                                        FontSize="30"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontFamily="Quicksand"
                                        FontWeight="Medium"
                                        Padding="5">
                                        
                                        <Run Text="{Binding Weight}"
                                             Foreground="Black"
                                             FontWeight="SemiBold"/>
                                        <Run Text="Kg"
                                             FontSize="25"/>
                                </TextBlock>

                                <TextBlock 
                                        FontSize="25"
                                        Foreground="Black"
                                        HorizontalAlignment="Center"
                                        FontFamily="Quicksand"
                                        FontWeight="Medium"
                                        Padding="5">
                                        
                                        <Run Text="{Binding vaccinated}"
                                             Foreground="Black"
                                             FontWeight="SemiBold"/>
                                </TextBlock>
                                
                                <!--Adoption email popup button-->
                                <Grid>
                                    <Button
                                    HorizontalAlignment="Stretch"
                                    BorderBrush="GreenYellow"
                                    Background="DeepPink"
                                    Foreground="White"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    VerticalAlignment="Bottom"
                                    Padding="5"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    FontFamily="Quicksand"
                                    Margin="20">
                                        Adoption now !
                                        <!--Owner Email-->
                                        <Button.Flyout>
                                            <Flyout
                                                x:Name="FlyoutPopup">
                                                <Grid
                                                    HorizontalAlignment="Center">
                                                    <StackPanel>
                                                        <TextBlock 
                                                            Text="Owner's Email"
                                                            HorizontalAlignment="Center"
                                                            FontSize="30"
                                                            FontFamily="Quicksand"
                                                            FontWeight="SemiBold"
                                                        />
                                                        <TextBlock 
                                                            Text="{Binding Email}"
                                                            HorizontalAlignment="Center"
                                                            FontSize="20"
                                                            FontFamily="Quicksand"
                                                            FontWeight="Medium"
                                                        />

                                                    </StackPanel>

                                                </Grid>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>

                                </Grid>
                               
                            </StackPanel>
                            
                        </Grid>
                        
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>


        </Grid>
    </Grid>
</Page>

