<Page
    x:Class="Fluffy_Paw.Donation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluffy_Paw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Background="#FFDDF9EB">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Menu bar -->
        <RelativePanel  Grid.Column="0"
                        Background="#FFBCF7DA">
            <Grid Margin="10,20,0,0"
                  Width="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <RelativePanel x:ConnectionId='8' Grid.Row="0" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                   >
                    <Grid x:ConnectionId='15' x:Name="Home"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Home.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Home"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Home"
                       RelativePanel.AlignHorizontalCenterWith="Home"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='9' Grid.Row="1" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                       >
                    <Grid x:ConnectionId='14' x:Name="PetAdoption"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Adoption.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Adoption"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="PetAdoption"
                       Foreground="Black"/>
                </RelativePanel>

                <RelativePanel x:ConnectionId='10' Grid.Row="2" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                                                  >
                    <Grid x:ConnectionId='13' x:Name="Missing"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Missing.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Rescue"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Missing"
                       RelativePanel.AlignHorizontalCenterWith="Missing"
                       Foreground="Black"
                       />
                </RelativePanel>

                <RelativePanel x:ConnectionId='11' Grid.Row="3" Margin="0,0,0,10"
                               HorizontalAlignment="Center"
                               Padding="15"
                               CornerRadius="10"
                               Background="#FF79F0B6"
                                                       >
                    <Grid x:ConnectionId='12' x:Name="Donate"
                          Margin="0,10,0,20">
                        <Image Source="Assets/Donation.png"
                               Width="50"
                               Height="50"/>
                    </Grid>
                    <TextBlock Text="Donation"
                       FontSize="13"
                       FontWeight="ExtraLight"
                       RelativePanel.AlignBottomWith="Donate"
                       RelativePanel.AlignHorizontalCenterWith="Donate"
                       Foreground="Black"/>
                </RelativePanel>

            </Grid>
        </RelativePanel>

        <Grid Grid.Column="1"
                       Margin="10,10,10,10"
                       CornerRadius="50"
                        Background="#FFBAD4CE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Name of the page-->
            <Grid
                 Margin="10,10,0,10"
                CornerRadius="50"
                Opacity="0.8">
                
                <Image Source="Assets/DonationPoster.png"
                       Stretch="Fill"/>
            
            </Grid>
            
            <!--Donation form-->
            <Grid
                Grid.Column="1"
                Background="#FF6B9C90"
                Margin="10"
                CornerRadius="50">
                <ScrollViewer>
                    <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#FFBCBCBC"
                    Opacity="0.8"
                    CornerRadius="20">

                        <!--Donation Form-->
                        <TextBlock Text="Donation Form"
                               FontSize="50"
                               FontFamily="Quicksand"
                               FontWeight="SemiBold"
                               Margin="10"
                               Foreground="Black"/>

                        <!--Name-->
                        <TextBox x:ConnectionId='2'
                        x:Name="Dname"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Name"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                        <!--Address-->
                        <TextBox x:ConnectionId='3'
                        x:Name="Daddress"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Address"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                        <!--Phone-->
                        <TextBox x:ConnectionId='4'
                        x:Name="Dphone"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Phone"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"/>

                        <!--Email-->
                        <TextBox x:ConnectionId='5'
                        x:Name="Demail"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        CornerRadius="5,10,10,10"
                        Header="Email"
                        FontSize="25"
                        FontFamily="Quicksand"
                        BorderThickness="0"
                        />

                        <!--Payment options-->
                        <ComboBox x:ConnectionId='6'
                          x:Name="Dcombo"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          PlaceholderText="Select"
                          Margin="5"
                          CornerRadius="5,10,10,10"
                          Header="Payment option"
                          FontSize="25"
                          FontFamily="Quicksand"
                          BorderThickness="0">
                            <ComboBoxItem Content="Credit card donation over the phone"/>
                            <ComboBoxItem Content="Bank trasfer"/>
                        </ComboBox>

                        <!--Submit button-->
                        <Button x:ConnectionId='7'
                        x:Name="Dbtn"
                                         
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="#FF479647"
                        Margin="5"
                        Padding="5"
                        CornerRadius="10"
                        FontFamily="Quicksand"
                        FontSize="20">
                            Submit
                        </Button>
                                      
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>

